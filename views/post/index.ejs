<% include ../layouts/header %>

  <div class="container">
    <div class="jumbotron">
      
      <h1 class="display-4">Welcome to the Image Gallery!</h1>
      <p class="lead">This is a simple Image Gallery created Using Node, HTML and CSS</p>
      <hr class="my-4">
      <p>The gallery displays photoes of professional photograpohers and some by me. </p>
      
      
      <a href="/newpost"><button class="btn btn-primary btn-md pull-right">Add to Gallery</button></a>
      
    </div>
  

    <div class="row" style="display: flex; flex-wrap: wrap;">
      <% images.forEach(function(images){ %>
      <div class="col-md-4 col-sm-6">
        <div class="card" >
          <a href="/show/<%= images._id%>"><img src="./uploads/<%= images.image %>" class="card-img-top" alt="..."></a>
          <div class="card-body">
            <h5 class="card-title"><i class="fa fa-user-circle"></i> <%= images.name %></h5>
            <p class="card-text"><%= images.message %></p>
          </div>
        </div> <br>   
      </div>
      <% }); %>
    </div>

    
  </div>


  


<% include ../layouts/footer %>