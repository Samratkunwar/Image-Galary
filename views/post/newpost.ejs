<% include ../layouts/header %>

    <div class="container">
        <h1 style="text-align: center;">Add new image to the Gallery</h1>
        <div class="row">
            <div style="margin:0 auto">
                <form action="/newimage" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input class="form-control-plaintext" type="text" name="message" placeholder="message">
                    </div>
                    <div class="form-group">
                        <input type="file" name="image">
                    </div>
                    <div class="form-group">
                       <button class="btn btn-success btn-block">Post</button> 
                    </div>
                    
                </form>
                </div>
            </div>

    </div>    

<% include ../layouts/footer %>